<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="mozscape.client.class">Ql4b\Bundle\MozscapeBundle\Service\Api\AbstractClient</parameter>
		<parameter key="mozscape.client.apiBaseUrl"></parameter>
		<parameter key="mozscape.client.accessId"></parameter>
		<parameter key="mozscape.client.secretKey"></parameter>
		<parameter key="mozscape.url_metrics.class">Ql4b\Bundle\MozscapeBundle\Service\Api\Client\UrlMetrics</parameter>
		<parameter key="mozscape.url_metrics.endpoint">url-metrics</parameter>
		
	</parameters>
	
    <services>
    	<service id="mozscape.client" class="%mozscape.client.class%" abstract="true">
    		<argument>%mozscape.client.apiBaseUrl%</argument>
    		<argument>%mozscape.client.accessId%</argument>
    		<argument>%mozscape.client.secretKey%</argument>
    	</service>
    	<service id="mozscape.url_metrics" class="%mozscape.url_metrics.class%" parent="mozscape.client">
    	    <call method="setApiUrl">
             	<argument>%mozscape.url_metrics.endpoint%</argument>
        	</call>
    	</service>
	</services>
</container>
